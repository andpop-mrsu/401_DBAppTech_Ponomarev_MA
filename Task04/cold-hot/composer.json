{
  "name": "modrakir/cold-hot",
  "require": {
    "wp-cli/php-cli-tools": "^0.12.5"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "ColdHot\\": "src/"
    }
  },
  "bin": [
    "cold-hot/bin/cold-hot"
  ],
  "scripts": {
    "phpcs": "vendor/bin/phpcs --standard=PSR12 src bin",
    "phpcs-fix": "vendor/bin/phpcbf --standard=PSR12 src bin"
  }
}